<!-- users/show 右側：Books(自分が投稿したやつ) path: user_path(current_user.id)-->

<main>
  <% flash.each do |message_type, message| %>
    <div class="flash-message <%= message_type %>"><%= message %></div>
  <% end %>

  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <%= render 'books/index-left', books: Book.all, book: @book, user: User.find(params[:id]) %>

      </div>
      <div class="col-md-8 offset-md-1">

        <%= render 'books/index-right', books: Book.where(user_id: User.find(params[:id])), book: @book, user: @user %>

      </div>
    </div>
  </div>
</main>