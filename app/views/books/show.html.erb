<!--  books/show 右側：Book detail path: book_path(@book.id) -->

<main>

  <% flash.each do |message_type, message| %>
    <div class="flash-message <%= message_type %>"><%= message %></div>
  <% end %>

  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <%= render 'books/index-left', books: Book.all, book: @book, user: User.find(@book.user_id) %>

      </div>
      <div class="col-md-8 offset-md-1">

        <%= render 'books/show', book: Book.find(params[:id]), user: @user %>

      </div>
    </div>
  </div>
</main>