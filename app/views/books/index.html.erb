<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'books/index-left', books: Book.all, book: @book, user: current_user %>
<%= render 'books/index-right', books: Book.all, book: @book, user: @user %>