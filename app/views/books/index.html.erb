<!-- books/index 右側：Books(他の人が投稿したやつ) path: books_path -->

<main>

  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <%= render 'books/index-left', books: Book.all, book: @book, user: current_user %>

      </div>
      <div class="col-md-8 offset-md-1">

        <%= render 'books/index-right', books: Book.all, book: @book, user: @user %>

      </div>
    </div>
  </div>
</main>